<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="8dp"
    android:paddingEnd="10dp"
    android:paddingStart="10dp"
    android:paddingBottom="16dp"
    android:gravity="center">

    <!-- PRO Version Card with gradient and surface alpha control -->
    <androidx.cardview.widget.CardView
        android:id="@+id/pro_bg"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginEnd="2dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <FrameLayout
            android:layout_width="match_parent"
            android:background="@drawable/pro_gradient_border"
            android:layout_height="match_parent">

            <!-- Content overlays -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/pro_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Most popular"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:background="@drawable/badge_bg"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/pro_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PRO Version"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="?attr/colorOnSecondaryContainer"/>

                <TextView
                    android:id="@+id/pro_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Unlock advanced data and extra Atomic content."
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnSecondaryContainer"/>

                <TextView
                    android:id="@+id/pro_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="---"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="9dp"
                    android:textColor="?attr/colorOnSecondaryContainer"/>

                <TextView
                    android:id="@+id/pro_buy_btn"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="start"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/toast_card"
                    android:backgroundTint="?attr/colorPrimary"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:foreground="@drawable/d_ripple"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Get PRO"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp"
                    android:textStyle="normal" />

            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- PRO+ Version Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/pro_plus_bg"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginStart="2dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:cardBackgroundColor="?attr/colorSurfaceVariant"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/pro_plus_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Most advanced"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:background="@drawable/badge_bg_advanced"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_gravity="end"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/pro_plus_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PRO+ Version"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="?attr/colorOnSecondaryContainer"/>

            <TextView
                android:id="@+id/pro_plus_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unlock advanced data and additional flashcards."
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:textColor="?attr/colorOnSecondaryContainer"/>

            <TextView
                android:id="@+id/pro_plus_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="---"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="9dp"
                android:textColor="?attr/colorOnSecondaryContainer"/>

            <TextView
                android:id="@+id/pro_plus_buy_btn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/toast_card"
                android:backgroundTint="?attr/colorPrimary"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:foreground="@drawable/d_ripple"
                android:gravity="center"
                android:padding="4dp"

                android:layout_marginTop="4dp"
                android:text="Get PRO+"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="16sp"
                android:textStyle="normal" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>