<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/view_flash"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/flashcard_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/flashcard_title_downstate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                android:paddingStart="0dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:text="@string/flashcards_title"
                android:textColor="?attr/colorOnSurface"
                android:textSize="32sp"
                android:textStyle="normal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:padding="16dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center"
                    android:background="@drawable/toast_card"
                    android:layout_height="108dp">

                    <TextView
                        android:id="@+id/level_stat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:text="@string/level_stat_placeholder"
                        android:layout_gravity="center_horizontal"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="@string/flashcards_level"
                        android:textAlignment="center"
                        android:gravity="center_horizontal"
                        android:layout_gravity="center_horizontal"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/toast_card"
                    android:layout_height="108dp">

                    <TextView
                        android:id="@+id/completed_quizzes_stat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="30sp"
                        android:text="@string/completed_quizzes_stat_placeholder"
                        android:layout_gravity="center_horizontal"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="@string/flashcards_total_games"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:textColor="?attr/colorOnSurface"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_weight="0.33"
                    android:padding="16dp"
                    android:gravity="center"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/toast_card"
                    android:layout_height="108dp">

                    <ImageButton
                        android:id="@+id/shuffle_btn"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:rotation="180"
                        app:tint="?attr/colorOnSecondaryContainer"
                        android:src="@drawable/ic_random_large"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/stats_Box"
                android:background="@drawable/toast_card"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flashcards_statistics"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="?attr/colorAccent"
                    android:drawableStart="@drawable/ic_stats"
                    android:drawablePadding="8dp"
                    android:drawableTint="?attr/colorAccent"
                    android:layout_marginTop="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginBottom="@dimen/margin_space_card"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ProgressBar
                        android:id="@+id/xp_progress"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/progress_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/progress_text_placeholder"
                        android:textSize="14sp"
                        android:gravity="end"
                        android:alpha="0.95"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginEnd="18dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/total_xp_stat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/total_xp_placeholder"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="4dp"
                    android:textColor="?attr/colorOnSurface"/>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/pro_box"
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/toast_card"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="@dimen/margin"
                            android:clickable="true"
                            android:drawableStart="@drawable/ic_star"
                            android:drawablePadding="12dp"
                            android:drawableTint="?attr/colorPrimary"
                            android:elevation="1dp"
                            android:focusable="true"
                            android:foreground="@drawable/c_ripple"
                            android:gravity="center_vertical"
                            android:text="@string/unlock_all_flashcards"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="?attr/colorPrimary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:paddingStart="@dimen/margin"
                            android:paddingEnd="@dimen/margin"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp"
                            android:text="@string/upgrade_pro_plus_description"/>

                    </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="70dp">

                        <TextView
                            android:id="@+id/get_pro_plus_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_marginStart="@dimen/margin"
                            android:layout_marginEnd="@dimen/margin"
                            android:layout_marginBottom="@dimen/margin"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/toast"
                            android:backgroundTint="?attr/colorPrimary"
                            android:clickable="true"
                            android:elevation="2dp"
                            android:focusable="true"
                            android:layout_gravity="center"
                            android:gravity="center_vertical"
                            android:paddingEnd="24dp"
                            android:paddingStart="24dp"
                            android:foreground="@drawable/c_ripple"
                            android:textStyle="bold"
                            android:text="@string/upgrade_to_pro_plus"
                            android:textSize="18sp"
                            android:textColor="?attr/colorOnPrimary" />
                    </FrameLayout>
                </LinearLayout>
            </FrameLayout>

            <LinearLayout
                android:id="@+id/difficulty_box"
                android:background="@drawable/toast_card"
                android:padding="16dp"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/flashcards_difficulty_title"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="?attr/colorAccent"
                    android:drawableStart="@drawable/ic_flashcards"
                    android:drawablePadding="8dp"
                    android:drawableTint="?attr/colorAccent"
                    android:layout_marginBottom="@dimen/margin_space_card"/>

                <TextView
                    android:id="@+id/tv_category_select_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="@string/flashcards_difficulty"
                    android:textAppearance="?attr/textAppearanceHeadline5"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:id="@+id/linear_difficulty"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_marginBottom="6dp">

                    <ToggleButton
                        android:id="@+id/toggle_easy"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textOn="@string/easy"
                        android:textOff="@string/easy"
                        android:text="@string/easy"
                        android:textSize="16sp"
                        android:background="@drawable/chip_toggle_selector"
                        android:checked="true"
                        android:paddingHorizontal="24dp"
                        android:textColor="?attr/colorOnSurface"/>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="1dp" />

                    <ToggleButton
                        android:id="@+id/toggle_medium"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textOn="@string/medium"
                        android:textOff="@string/medium"
                        android:text="@string/medium"
                        android:textSize="16sp"
                        android:background="@drawable/chip_toggle_selector"
                        android:paddingHorizontal="24dp"
                        android:textColor="?attr/colorOnSurface"/>

                    <Space
                        android:layout_width="12dp"
                        android:layout_height="1dp" />

                    <ToggleButton
                        android:id="@+id/toggle_hard"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:textOn="@string/hard"
                        android:textOff="@string/hard"
                        android:text="@string/hard"
                        android:textSize="16sp"
                        android:background="@drawable/chip_toggle_selector"
                        android:paddingHorizontal="24dp"
                        android:textColor="?attr/colorOnSurface"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_lives_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="?attr/colorError"
                android:textSize="16sp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp"/>
            <!-- Level 0-4 Box -->
            <LinearLayout
                android:id="@+id/box_0_4"
                android:background="@drawable/toast_card"
                android:layout_marginBottom="@dimen/default_padding"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_box_0_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_0_4"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="?attr/colorAccent"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawableTint="?attr/colorAccent"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="@dimen/default_padding"
                    android:layout_marginBottom="@dimen/margin_space_card"/>

                <LinearLayout
                    android:id="@+id/btn_element_symbols"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/element_symbols"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_element_names"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/element_names"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_element_classifications"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/element_groups"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_discovered_by"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/discovered_by"/>
                    <TextView
                        android:id="@+id/pro_badge_discovered_by"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pro_plus_badge"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimary"
                        android:background="@drawable/pro_plus_badge_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_discovery_year"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/discovery_year"/>
                    <TextView
                        android:id="@+id/pro_badge_discovery_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pro_plus_badge"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimary"
                        android:background="@drawable/pro_plus_badge_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Level 5-9 Box -->
            <LinearLayout
                android:id="@+id/box_5_9"
                android:background="@drawable/toast_card"
                android:layout_marginBottom="@dimen/default_padding"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_box_5_9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_5_9"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="?attr/colorAccent"
                    android:drawableTint="?attr/colorAccent"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="@dimen/default_padding"
                    android:layout_marginBottom="@dimen/margin_space_card"/>

                <LinearLayout
                    android:id="@+id/btn_appearance"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/appearance"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_atomic_number"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/atomic_number"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_electrical_type"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/electrical_type"/>
                    <TextView
                        android:id="@+id/pro_badge_electrical_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pro_plus_badge"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimary"
                        android:background="@drawable/pro_plus_badge_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_radioactive"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/radioactive"/>
                    <TextView
                        android:id="@+id/pro_badge_radioactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pro_plus_badge"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimary"
                        android:background="@drawable/pro_plus_badge_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Level 10-14 Box -->
            <LinearLayout
                android:id="@+id/box_10_14"
                android:background="@drawable/toast_card"
                android:layout_marginBottom="@dimen/default_padding"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_box_10_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_10_14"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="?attr/colorAccent"
                    android:drawableTint="?attr/colorAccent"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="@dimen/default_padding"
                    android:layout_marginBottom="@dimen/margin_space_card"/>

                <LinearLayout
                    android:id="@+id/btn_atomic_mass"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/atomic_mass"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_density"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/density"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_electronegativity"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/electronegativity"/>
                    <TextView
                        android:id="@+id/pro_badge_electronegativity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pro_plus_badge"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimary"
                        android:background="@drawable/pro_plus_badge_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_block"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/block"/>
                    <TextView
                        android:id="@+id/pro_badge_block"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pro_plus_badge"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimary"
                        android:background="@drawable/pro_plus_badge_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Level 15-19 Box -->
            <LinearLayout
                android:id="@+id/box_15_19"
                android:background="@drawable/toast_card"
                android:layout_marginBottom="@dimen/default_padding"
                android:paddingStart="16dp"
                android:paddingBottom="12dp"
                android:paddingEnd="16dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/title_box_15_19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_15_19"
                    android:textStyle="bold"
                    android:drawableTint="?attr/colorAccent"
                    android:textSize="20sp"
                    android:textColor="?attr/colorAccent"
                    android:drawableStart="@drawable/ic_lock"
                    android:drawablePadding="8dp"
                    android:layout_marginTop="@dimen/default_padding"
                    android:layout_marginBottom="@dimen/margin_space_card"/>

                <LinearLayout
                    android:id="@+id/btn_magnetic_type"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/magnetic_type"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_phase_stp"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/phase_stp"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_crystal_structure"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/crystal_structure"/>
                    <TextView
                        android:id="@+id/pro_badge_crystal_structure"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pro_plus_badge"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimary"
                        android:background="@drawable/pro_plus_badge_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/btn_superconducting_point"
                    style="@style/CategoryButtonRow">
                    <TextView style="@style/CategoryButtonText" android:text="@string/superconducting_point"/>
                    <TextView
                        android:id="@+id/pro_badge_superconducting_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/pro_plus_badge"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnPrimary"
                        android:background="@drawable/pro_plus_badge_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="2dp"
                        android:paddingBottom="2dp"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical"
                        android:visibility="gone"/>
                    <ImageView style="@style/CategoryButtonIcon"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Level 20-24 Box -->
            <LinearLayout
                android:id="@+id/box_20_24"
                android:background="@drawable/toast_card"
                android:layout_marginBottom="@dimen/default_padding"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="12dp"
                android:orientation="vertical"
