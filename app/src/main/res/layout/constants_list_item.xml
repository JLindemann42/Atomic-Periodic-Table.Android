<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rCard"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_marginStart="@dimen/margin"
    android:layout_marginTop="@dimen/margin_space_card"
    android:layout_marginEnd="@dimen/margin"
    android:layout_marginBottom="@dimen/margin_space_card"
    android:background="@drawable/toast_card"
    android:backgroundTint="?attr/colorSurfaceVariant"
    android:clickable="true"
    android:focusable="true">

    <FrameLayout
        android:id="@+id/elemntCard"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin"
        android:background="@drawable/toast"
        android:backgroundTint="?attr/colorPrimary">

        <TextView
            android:id="@+id/tv_poi_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:text="tv_short"
            android:textColor="?attr/colorOnPrimary" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_poi_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:text="tv_name"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_poi_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:text="tv_poi_1"
                android:textColor="?attr/colorOnSurfaceVariant" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical|end">

        <TextView
            android:id="@+id/tv_poi_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="18dp"
            android:textSize="15sp"
            android:text="tv_type"
            android:textColor="?attr/colorTertiary" />

        <TextView
            android:id="@+id/tv_poi_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginEnd="18dp"
            android:textSize="13sp"
            android:text="tv_type"
            android:textColor="?attr/colorTertiary" />

    </LinearLayout>


</FrameLayout>