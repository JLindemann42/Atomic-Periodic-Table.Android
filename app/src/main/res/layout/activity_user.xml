<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        android:id="@+id/view_user"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/backgroundColor">

    <ScrollView
        android:id="@+id/user_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="100dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/user_img"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:tint="?attr/colorPrimary"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_account"/>

        <TextView
            android:id="@+id/user_title_downstate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            android:paddingStart="@dimen/default_padding"
            android:paddingEnd="@dimen/default_padding"
            android:paddingBottom="4dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/user_title"
            android:textColor="?attr/colorOnSurface"
            android:textSize="32sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/pro_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="PRO-User"
            android:textColor="?attr/colorSurface"
            android:background="@drawable/toast"
            android:backgroundTint="?attr/colorAccent"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <LinearLayout
            android:id="@+id/stats_Box"
            android:background="@drawable/toast_card"
            android:layout_marginTop="@dimen/default_padding"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usage Statistics"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="?attr/colorAccent"
                android:drawableStart="@drawable/ic_stats"
                android:drawablePadding="8dp"
                android:drawableTint="?attr/colorAccent"
                android:layout_marginTop="@dimen/default_padding"
                android:layout_marginStart="@dimen/default_padding"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_marginBottom="@dimen/margin_space_card"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:alpha="0.25"
                android:background="?attr/colorOnSecondaryContainer" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:padding="@dimen/default_padding"
                android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="0.33"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/elements_stat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="---"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?attr/colorOnSurface"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Elements opened"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="0.33"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/calculation_stat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="---"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?attr/colorOnSurface"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Calculations"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="0.33"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/search_stat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:text="---"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?attr/colorOnSurface"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="Searches"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textColor="?attr/colorOnSurface"/>

            </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:background="@drawable/toast_card"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rate App"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="?attr/colorAccent"
                    android:drawableStart="@drawable/ic_star"
                    android:drawablePadding="8dp"
                    android:drawableTint="?attr/colorAccent"
                    android:layout_marginTop="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginBottom="@dimen/margin_space_card"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:alpha="0.25"
                    android:background="?attr/colorOnSecondaryContainer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp"
                    android:text="Let us know what you think of the app, by rating it on the Play Store!"
                    android:textColor="?attr/colorOnSurface"/>

                <TextView
                    android:id="@+id/rate_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorPrimary"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:foreground="@drawable/c_ripple"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="Rate"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/toast_card"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical"
                android:layout_weight="0.5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Share App"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="?attr/colorAccent"
                    android:drawableStart="@drawable/ic_share"
                    android:drawablePadding="8dp"
                    android:drawableTint="?attr/colorAccent"
                    android:layout_marginTop="@dimen/default_padding"
                    android:layout_marginStart="@dimen/default_padding"
                    android:layout_marginEnd="@dimen/default_padding"
                    android:layout_marginBottom="@dimen/margin_space_card"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:alpha="0.25"
                    android:background="?attr/colorOnSecondaryContainer" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp"
                    android:text="If you find the app useful, please share it with your friends and others!"
                    android:textColor="?attr/colorOnSurface"/>

                <TextView
                    android:id="@+id/share_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorPrimary"
                    android:clickable="true"
                    android:elevation="2dp"
                    android:focusable="true"
                    android:foreground="@drawable/c_ripple"
                    android:gravity="center_vertical"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="Share"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:id="@+id/achievement_box"
            android:background="@drawable/toast_card"
            android:layout_marginStart="@dimen/default_padding"
            android:layout_marginEnd="@dimen/default_padding"
            android:layout_marginBottom="80dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="600dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user_achievements"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="?attr/colorAccent"
                android:drawableStart="@drawable/ic_achievements"
                android:drawablePadding="8dp"
                android:drawableTint="?attr/colorAccent"
                android:layout_marginTop="@dimen/default_padding"
                android:layout_marginStart="@dimen/default_padding"
                android:layout_marginEnd="@dimen/default_padding"
                android:layout_marginBottom="@dimen/margin_space_card"/>

            <TextView
                android:id="@+id/space_achievements"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="18dp"
                android:alpha="0.25"
                android:background="?attr/colorOnSecondaryContainer" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_achievements"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:verticalScrollbarPosition="defaultPosition"
                android:padding="16dp"/>
        </LinearLayout>


    </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/common_title_back_user"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar"
        android:elevation="1dp"
        android:background="?attr/colorSurface"
        android:gravity="center|center_vertical"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/common_title_user_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            android:alpha="0.11"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/title_box"
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar">

                <ImageButton
                    android:id="@+id/back_btn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center_vertical"
                    android:rotation="180"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_arrow_back_whit" />

                <TextView
                    android:id="@+id/user_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/title_bar"
                    android:layout_marginStart="70dp"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:alpha="0.9"
                    android:paddingEnd="0dp"
                    android:text="@string/user_title"
                    android:textAlignment="center"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
