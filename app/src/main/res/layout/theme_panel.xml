<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="100dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top"
            android:layout_weight="0.25"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/toast"
                android:backgroundTint="?attr/colorSurface"
                android:clickable="true"
                android:elevation="8dp"
                android:focusable="true"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/half_up_toast"
                        android:backgroundTint="?attr/colorPrimary"
                        android:alpha="0.11"/>

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:alpha="1.0"
                        android:text="@string/select_theme"
                        android:textAlignment="viewStart"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </FrameLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/colorPrimary"
                                android:alpha="0.11"/>

                            <TextView
                                android:id="@+id/system_default_btn"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:clickable="true"
                                android:drawableStart="@drawable/ic_radio_checked"
                                android:drawablePadding="20dp"
                                android:focusable="true"
                                android:foreground="@drawable/d_ripple"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/system_default"
                                android:textColor="?attr/colorOnSecondaryContainer"
                                android:textSize="16sp" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/colorPrimary"
                                android:alpha="0.11"/>

                            <TextView
                                android:id="@+id/light_btn"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:clickable="true"
                                android:drawableStart="@drawable/ic_radio_unchecked"
                                android:drawablePadding="20dp"
                                android:focusable="true"
                                android:foreground="@drawable/d_ripple"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/light"
                                android:textColor="?attr/colorOnSecondaryContainer"
                                android:textSize="16sp" />

                        </FrameLayout>

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="?attr/colorPrimary"
                                android:alpha="0.11"/>

                            <TextView
                                android:id="@+id/dark_btn"
                                android:layout_width="match_parent"
                                android:layout_height="48dp"
                                android:clickable="true"
                                android:drawableStart="@drawable/ic_radio_unchecked"
                                android:drawablePadding="20dp"
                                android:focusable="true"
                                android:foreground="@drawable/d_ripple"
                                android:gravity="center_vertical"
                                android:paddingStart="20dp"
                                android:paddingTop="8dp"
                                android:paddingEnd="8dp"
                                android:paddingBottom="8dp"
                                android:text="@string/dark"
                                android:textColor="?attr/colorOnSecondaryContainer"
                                android:textSize="16sp" />

                        </FrameLayout>

                    </LinearLayout>
                </ScrollView>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/half_down_toast"
                        android:backgroundTint="?attr/colorPrimary"
                        android:alpha="0.11"/>

                    <TextView
                        android:id="@+id/cancel_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_margin="8dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="@drawable/c_ripple"
                        android:gravity="center_vertical"
                        android:padding="8dp"
                        android:text="@string/cancel"
                        android:textColor="?attr/colorPrimary"
                        android:textFontWeight="600"
                        android:textSize="14sp" />

                </FrameLayout>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25" />

    </LinearLayout>

    <TextView
        android:id="@+id/theme_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@color/colorLightText" />

</FrameLayout>