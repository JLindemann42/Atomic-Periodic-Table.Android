<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:elevation="12dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/empty_search_box"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:visibility="gone"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/empty_ele_search_image"
                android:layout_width="164dp"
                android:layout_marginTop="44dp"
                android:layout_height="164dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/graphic_light_search" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="42dp"
                android:textColor="?attr/actionMenuTextColor"
                android:textSize="24sp"
                android:text="@string/no_results"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textColor="?attr/actionMenuTextColor"
                android:layout_marginStart="42dp"
                android:layout_marginEnd="42dp"
                android:textSize="16sp"
                android:text="@string/try_another_search"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/common_title_back_search"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:alpha="0.975"
            android:background="?attr/colorSurface"
            android:elevation="8dp"
            android:gravity="center|center_vertical"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary"
                android:alpha="0.12"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/title_box"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/filter_btn"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center_vertical|end"
                        android:clickable="true"
                        android:elevation="0dp"
                        android:focusable="true"
                        android:src="@drawable/ic_sort"
                        android:tint="?attr/colorOnSecondaryContainer"
                        app:backgroundTint="@color/transparent"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        app:fabSize="auto" />

                    <FrameLayout
                        android:id="@+id/search_bar_element"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="56dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="56dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/toast"
                        android:backgroundTint="?attr/colorSurface"
                        android:elevation="0dp"
                        android:visibility="visible">


                        <EditText
                            android:id="@+id/edit_element"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:hint="@string/search_elements"
                            android:imeOptions="actionSearch"
                            android:inputType="text"
                            android:maxLines="1"
                            android:paddingStart="18dp"
                            android:textColor="?attr/colorOnSurface"
                            android:textColorHint="?attr/colorOnSurface"
                            android:textSize="14sp" />

                    </FrameLayout>

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/close_element_search"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center_vertical"
                        android:clickable="true"
                        android:elevation="0dp"
                        android:focusable="true"
                        android:src="@drawable/ic_close"
                        android:tint="?attr/colorOnSecondaryContainer"
                        app:backgroundTint="@color/transparent"
                        app:borderWidth="0dp"
                        app:elevation="0dp"
                        app:fabSize="auto" />

                </FrameLayout>

            </LinearLayout>
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/element_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="9dp"
            android:paddingBottom="60dp"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:verticalScrollbarPosition="defaultPosition">

        </androidx.recyclerview.widget.RecyclerView>

    </FrameLayout>

    <TextView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true" />

    <include
        android:id="@+id/filter_box"
        layout="@layout/filter_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="9dp"
        android:clickable="true"
        android:elevation="8dp"
        android:focusable="true" />

</FrameLayout>