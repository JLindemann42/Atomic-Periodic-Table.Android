                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/pro_geo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:layout_gravity="start"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:alpha="0.8"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorTertiary"
                    android:gravity="center"
                    android:paddingStart="14dp"
                    android:paddingEnd="14dp"
                    android:text="Requires PRO-Version"
                    android:textAlignment="center"
                    android:textColor="?attr/colorOnTertiary"
                    android:textSize="13sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin"
                    android:layout_marginTop="@dimen/margin_space"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin_space"
                    android:text="@string/table_geology_text"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:textSize="16sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/geo_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/margin_space"
                    android:layout_marginEnd="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorPrimary"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="@drawable/toast_card_ripple"
                    android:gravity="center"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="@string/open_table_button"
                    android:textAlignment="center"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="16sp" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>
    </ScrollView>

</FrameLayout>
