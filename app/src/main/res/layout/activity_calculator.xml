<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
        android:id="@+id/view_cal"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?attr/backgroundColor">

    <ScrollView
                android:id="@+id/calculator_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/calculator_title_downstate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:paddingBottom="28dp"
                        android:text="@string/calculator_title"
                        android:textColor="?attr/colorOnSurface"
                        android:textSize="32sp"
                        android:textStyle="normal" />


                        <LinearLayout
                            android:id="@+id/cal_box"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="@dimen/margin_space"
                            android:layout_marginEnd="16dp"
                            android:layout_marginBottom="16dp"
                            android:background="@drawable/toast"
                            android:backgroundTint="?attr/colorSurfaceVariant"
                            android:elevation="2dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/margin"
                                android:text="Calculator:"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edit_text_cal"
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                android:layout_marginStart="@dimen/margin"
                                android:layout_marginEnd="@dimen/margin"
                                android:background="@drawable/toast"
                                android:backgroundTint="?attr/colorSurface"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:hint="Formula:"
                                android:imeOptions="actionSearch"
                                android:inputType="text"
                                android:maxLines="1"
                                android:paddingStart="18dp"
                                android:paddingEnd="18dp"
                                android:textColor="?attr/colorOnSurface"
                                android:textColorHint="?attr/colorOnSurface"
                                android:textSize="24sp" />

                            <TextView
                                android:id="@+id/out_text"
                                android:layout_width="match_parent"
                                android:layout_height="54dp"
                                android:layout_marginStart="@dimen/margin"
                                android:layout_marginTop="@dimen/margin"
                                android:layout_marginEnd="@dimen/margin"
                                android:background="@drawable/toast"
                                android:backgroundTint="?attr/colorSurface"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:gravity="top"
                                android:paddingStart="18dp"
                                android:paddingTop="18dp"
                                android:paddingEnd="18dp"
                                android:paddingBottom="18dp"
                                android:text="Output"
                                android:textColor="?attr/colorOnSurface"
                                android:textColorHint="?attr/colorOnSurface"
                                android:textSize="14sp" />


                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/inc_weight_list"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin"
                                android:layout_marginTop="@dimen/margin_space"
                                android:layout_marginEnd="@dimen/margin"
                                android:layout_marginBottom="@dimen/margin" />

                        </LinearLayout>




                    <LinearLayout
                    android:id="@+id/fav_box"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="@dimen/margin_space"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorSurfaceVariant"
                    android:elevation="2dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:text="Favorites:"
                        android:layout_margin="@dimen/margin"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"/>

                </LinearLayout>

                </LinearLayout>
            </ScrollView>
    <FrameLayout
            android:id="@+id/common_title_back_cal"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:elevation="1dp"
            android:background="?attr/colorSurface"
            android:gravity="center|center_vertical"
            android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/common_title_back_cal_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            android:alpha="0.11"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/title_box"
                    android:layout_width="match_parent"
                    android:layout_height="56dp">

                    <ImageButton
                        android:id="@+id/back_btn_cal"
                        style="?android:attr/borderlessButtonStyle"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center_vertical"
                        android:rotation="180"
                        app:tint="?attr/colorOnSecondaryContainer"
                        android:src="@drawable/ic_arrow_back_whit" />

                    <TextView
                        android:id="@+id/calculator_title"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="70dp"
                        android:alpha="0.9"
                        android:layout_height="56dp"
                        android:gravity="center"
                        android:paddingStart="0dp"
                        android:paddingEnd="0dp"
                        android:text="@string/calculator_title"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnSecondaryContainer"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </FrameLayout>
            </LinearLayout>
        </FrameLayout>
</FrameLayout>
