<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/view_learn"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/backgroundColor">

    <!-- Title bar -->
    <FrameLayout
        android:id="@+id/common_title_back_learn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:elevation="1dp"
        android:background="?attr/colorSurface"
        android:gravity="center|center_vertical"
        android:orientation="horizontal">
        <FrameLayout
            android:id="@+id/common_title_back_learn_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorPrimary"
            android:alpha="0.11"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">
            <FrameLayout
                android:id="@+id/title_box"
                android:layout_width="match_parent"
                android:layout_height="56dp">
                <ImageButton
                    android:id="@+id/back_btn_learn"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical"
                    android:rotation="180"
                    android:src="@drawable/ic_arrow_back_whit" />
                <TextView
                    android:id="@+id/learn_title"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="70dp"
                    android:alpha="0.9"
                    android:layout_height="56dp"
                    android:gravity="center"
                    android:paddingStart="0dp"
                    android:paddingEnd="0dp"
                    android:text="@string/flashcards_title"
                    android:textAlignment="center"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tv_lives_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_gravity="center_vertical|end"
                    android:textSize="20sp"
                    android:drawableStart="@drawable/ic_heart"
                    android:drawableTint="?attr/colorError"
                    android:paddingEnd="24dp"
                    android:drawablePadding="9dp"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textColor="?attr/colorOnSurface"
                    android:textAppearance="?attr/textAppearanceSubtitle1"
                    android:textStyle="bold"
                    android:layout_marginStart="4dp"/>
            </FrameLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- Effect overlay should be under quiz_content for visual stacking -->
    <FrameLayout
        android:id="@+id/effect_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="0dp"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

    <!-- Result card overlay (shows Correct/Wrong/Lost 1 life between questions) -->
    <FrameLayout
        android:id="@+id/result_card_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/toast_card"
            android:orientation="vertical"
            android:padding="32dp"
            android:layout_margin="24dp"
            android:elevation="8dp"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/result_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Correct"
                android:textSize="26sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="12dp"/>

            <TextView
                android:id="@+id/result_subtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:gravity="center"/>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/quiz_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="72dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question text"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <!-- Progress bar for timer -->
        <ProgressBar
            android:id="@+id/time_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:max="100"
            android:progress="100"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="12dp" />

        <GridLayout
            android:id="@+id/grid_answers"
            android:layout_width="match_parent"
            android:elevation="1dp"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true"
            android:layout_gravity="center">

            <!-- ANSWER CARD 1 -->
            <LinearLayout
                android:id="@+id/answer_1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:background="@drawable/card_button_bg"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp"
                android:padding="16dp">
                <TextView
                    android:id="@+id/answer_text_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option 1"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:padding="24dp"/>
            </LinearLayout>

            <!-- ANSWER CARD 2 -->
            <LinearLayout
                android:id="@+id/answer_2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:background="@drawable/card_button_bg"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp"
                android:padding="16dp">
                <TextView
                    android:id="@+id/answer_text_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option 2"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:padding="24dp"/>
            </LinearLayout>

            <!-- ANSWER CARD 3 -->
            <LinearLayout
                android:id="@+id/answer_3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:background="@drawable/card_button_bg"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp"
                android:padding="16dp">
                <TextView
                    android:id="@+id/answer_text_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option 3"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:padding="24dp"/>
            </LinearLayout>

            <!-- ANSWER CARD 4 -->
            <LinearLayout
                android:id="@+id/answer_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:orientation="vertical"
                android:background="@drawable/card_button_bg"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:layout_margin="8dp"
                android:padding="16dp">
                <TextView
                    android:id="@+id/answer_text_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Option 4"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:padding="24dp"/>
            </LinearLayout>
        </GridLayout>

        <TextView
            android:id="@+id/tv_lives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lives: 5"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="invisible"
            android:textColor="?attr/colorError"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_gravity="center"/>
    </LinearLayout>
</FrameLayout>