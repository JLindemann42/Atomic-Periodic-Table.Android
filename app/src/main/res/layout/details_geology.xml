<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="100dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="2dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1">

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:backgroundTint="?attr/colorSurface"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/toast"
                android:clickable="true"
                android:elevation="8dp"
                android:focusable="true"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorPrimary"
                    android:layout_gravity="center"
                    android:elevation="1dp"
                    android:alpha="0.11"/>

                <TextView
                    android:id="@+id/geo_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:alpha="1.0"
                    android:text="Geology Title"
                    android:textAlignment="viewStart"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/detail_card"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginEnd="18dp"
                        android:orientation="vertical"
                        android:paddingBottom="16dp">

                        <TextView
                            android:id="@+id/geo_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="geo_type"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textIsSelectable="true"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/geo_group"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="geo_group"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textIsSelectable="true"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/geo_color"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="geo_color"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textIsSelectable="true"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/geo_strike"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="geo_strike"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textIsSelectable="true"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/geo_cristal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="geo_cristal"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textIsSelectable="true"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/geo_hardness"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="geo_hardness"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textIsSelectable="true"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/geo_density"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="geo_density"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textIsSelectable="true"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/geo_magnetism"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="geo_magnetism"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textIsSelectable="true"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/geo_hydrochloride"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="4dp"
                            android:text="geo_hydrochloride"
                            android:textColor="?attr/colorOnSecondaryContainer"
                            android:textIsSelectable="true"
                            android:textSize="16sp" />

                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1" />

    </LinearLayout>

    <TextView
        android:id="@+id/detail_background_geo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@color/colorLightText" />

</FrameLayout>