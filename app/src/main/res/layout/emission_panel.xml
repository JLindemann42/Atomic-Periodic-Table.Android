<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.androidx.com/tools"
    android:elevation="100dp"
    android:orientation="vertical">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/sliding_layout_e"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="101dp"
        android:gravity="bottom"
        sothree:umanoFadeColor="@android:color/transparent"
        sothree:umanoInitialState="collapsed"
        sothree:umanoPanelHeight="0dp"
        sothree:umanoScrollableView="@id/scroll_iso"
        sothree:umanoShadowHeight="0dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="16sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/half_toast"
            android:backgroundTint="?attr/colorSurface"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center|top"
            android:orientation="vertical"
            android:textSize="16sp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/half_toast"
                android:backgroundTint="?attr/colorPrimary"
                android:alpha="0.11"/>

            <FrameLayout
                android:id="@+id/drag_emission"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:clickable="true"
                android:elevation="4dp"
                android:focusable="true">

                <TextView
                    android:id="@+id/drag_icon"
                    android:layout_width="48dp"
                    android:layout_height="2dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="16dp"
                    android:alpha="0.85"
                    android:background="@drawable/toast"
                    android:backgroundTint="?attr/colorOnSecondaryContainer"
                    android:elevation="4dp"
                    android:gravity="center_horizontal" />
            </FrameLayout>

            <ScrollView
                android:id="@+id/scroll_emi_panel"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:verticalScrollbarPosition="defaultPosition"
                android:layout_width="match_parent"
                android:layout_marginTop="36dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/emi_img_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:adjustViewBounds="true"
                        app:srcCompat="@drawable/ic_launcher_background" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView30"
                                android:layout_width="2dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="4dp"
                                android:alpha="0.66"
                                android:background="?attr/colorOnSurface" />

                            <TextView
                                android:id="@+id/nm4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="400 (nm)"
                                android:textAlignment="center"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView31"
                                android:layout_width="2dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="4dp"
                                android:alpha="0.66"
                                android:background="?attr/colorOnSurface" />

                            <TextView
                                android:id="@+id/nm5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="500 (nm)"
                                android:textAlignment="center"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView34"
                                android:layout_width="2dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="4dp"
                                android:alpha="0.66"
                                android:background="?attr/colorOnSurface" />

                            <TextView
                                android:id="@+id/nm6"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="600 (nm)"
                                android:textAlignment="center"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.25"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView35"
                                android:layout_width="2dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="2dp"
                                android:layout_marginBottom="4dp"
                                android:alpha="0.66"
                                android:background="?attr/colorOnSurface" />

                            <TextView
                                android:id="@+id/nm7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="700 (nm)"
                                android:textAlignment="center"
                                android:textColor="?attr/colorOnSurface" />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </ScrollView>


        </FrameLayout>

    </com.sothree.slidinguppanel.SlidingUpPanelLayout>

</FrameLayout>